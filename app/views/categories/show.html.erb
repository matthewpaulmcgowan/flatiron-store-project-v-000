<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
    <li><%= link_to item.title, item_path(item) %></li><br />
    <li><%= number_to_currency(item.adjusted_price) %></li><br />
    <li><%= button_to 'Add to Cart', line_items_path(item_id: item) if current_user %></li><br />
<% end %>
</ul>

 